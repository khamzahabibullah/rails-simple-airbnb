
<div class="container">
  <div class="form-card background-form">
    <h1>Add a new Flat</h1>
    <%= form_for(@flat) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control mb-3' %>
        <%= f.label :address %>
        <%= f.text_field :address, class: 'form-control mb-3'%>
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control mb-3'%>
        <%= f.label :number_of_guests %>
        <%= f.number_field :number_of_guests, class: 'form-control mb-3'%>
        <%= f.label :price_per_night %>
        <%= f.number_field :price_per_night, class: 'form-control mb-3'%>
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancel', flats_path, class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
